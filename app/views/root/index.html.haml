%h1 Game

%div{:id => :game}
  = hidden_field(:game, :matrix, {:value => matrix_to_hash(@game.get_matrix).to_json})
  %table
    - @game.get_colors.each_with_index do |row, horizontal|
      %tr
        - row.each_with_index do |element, vertical|
          %td{:style => "background: " + element}
            %a{:class => :linker, :href => "javascript: void(0)", :horizontal => horizontal, :vertical => vertical}
= link_to "Regenerate", :action => :index

